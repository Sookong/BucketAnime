<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_faxianfrg_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_search_background"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="搜索动漫-动漫全名" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="热门搜索" />

        <com.tanwuyu.ivrtym.bucketanime.widget.InsideScrollView
            android:id="@+id/insidescrollview_faxianfrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff00"
            android:minHeight="150dp">

            <com.tanwuyu.ivrty.flowlayout.FlowLayout
                android:id="@+id/flowlayout_faxianfrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#ff0000" />
        </com.tanwuyu.ivrtym.bucketanime.widget.InsideScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#000000" />

            <ImageView
                android:id="@+id/iv_indicator_faxianfrg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#ff0000" />

            <TextView
                android:id="@+id/tv_indicator_faxianfrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#000000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:minHeight="50dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:minHeight="50dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:minHeight="50dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:minHeight="50dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_network_cell_white_24dp"
            android:drawableRight="@drawable/ic_network_cell_white_24dp"
            android:minHeight="50dp"
            android:paddingRight="5dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
