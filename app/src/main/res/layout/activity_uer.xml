<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    >


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_user_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@color/pink"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:text="谭伍钰" />

                <TextView
                    android:id="@+id/tv_user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_border_color_light_blue_100_24dp"
                    android:text="南宁鸽子王" />

            </LinearLayout>

            <TextView
                android:background="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="10dp"
                android:text="个人中心"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TableLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/shape_diver_v"
                android:orientation="vertical"
                android:showDividers="middle|beginning|end">

                <TableRow
                    android:divider="@drawable/shape_diver_h"
                    android:showDividers="middle|beginning|end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like_true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频收藏" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like_true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频收藏" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like_true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频收藏" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like_true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频收藏" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:divider="@drawable/shape_diver_h"
                    android:showDividers="middle|beginning|end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/like_true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频收藏" />
                    </LinearLayout>

                    <View
                        android:layout_span="1"
                        android:layout_weight="1" />

                    <View
                        android:layout_span="1"
                        android:layout_weight="1" />

                    <View
                        android:layout_span="1"
                        android:layout_weight="1" />


                </TableRow>


            </TableLayout>

            <TextView
                android:gravity="center_vertical"
                android:text="账号信息"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_purple_500_24dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/share_gray"
                android:id="@+id/tv_personal_info"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:gravity="center_vertical"
                android:text="推荐App给朋友"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_purple_500_24dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/share_gray"
                android:id="@+id/tv_share_app"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:gravity="center_vertical"
                android:text="帮助与反馈"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_purple_500_24dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:drawableLeft="@drawable/share_gray"
                android:id="@+id/tv_help"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:gravity="center_vertical"
                android:text="设置"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_purple_500_24dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/share_gray"
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:background="#78ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>


</FrameLayout>