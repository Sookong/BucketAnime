<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_media_controller_top"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="2.5dp"
        android:padding="2.5dp"
        android:src="@drawable/ic_arrow_back_white_24dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#32fdfdfd" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="少年锦衣卫第2集" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_network"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_network_cell_white_24dp" />

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_battery_60_white_24dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="03:12PM" />

</LinearLayout>