<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_search"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_anime_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二哈的模特生涯" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_anime_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完结" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_anime_episod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新到8话" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_anime_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搞笑 都市 耽美" />

        <TextView
            android:text="二哈阴差阳错变成人,炉里赚钱养家糊口,二哈阴差阳错变成人,炉里赚钱养家糊口,二哈阴差阳错变成人,炉里赚钱养家糊口"
            android:id="@+id/tv_desc_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>